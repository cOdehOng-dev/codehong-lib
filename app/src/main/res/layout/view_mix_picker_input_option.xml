<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="13dp"
    android:orientation="vertical">

    <com.codehong.lib.sample.playground.preview.TitleDespView
        android:id="@+id/v_title_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_select_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_border_6200ee_radius10"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="14dp"
        android:fontFamily="@font/pretendard_500"
        android:includeFontPadding="false"
        android:textColor="@color/honglib_default"
        android:textCursorDrawable="@drawable/cursor_purple"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="옵션 입력" />

    <com.codehong.lib.sample.playground.preview.InputView
        android:id="@+id/v_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
